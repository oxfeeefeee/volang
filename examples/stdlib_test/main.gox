package main

import "strings"
import "strconv"
import "math"
import "os"

func main() int {
    println("=== strings ===")
    s := "hello world"
    if strings.Contains(s, "world") {
        println("Contains: ok")
    }
    println(strings.ToUpper("hello"))
    println(strings.Join(strings.Split("a,b,c", ","), "-"))
    println(strings.TrimSpace("  hello  "))
    println(strings.Replace("hello", "l", "L", 1))
    
    println("\n=== strconv ===")
    n, _ := strconv.Atoi("42")
    println(n)
    println(strconv.Itoa(123))
    
    println("\n=== math ===")
    println(math.Abs(-3.14))
    println(math.Max(1.0, 2.0))
    println(math.Sqrt(16.0))
    
    println("\n=== os ===")
    // Test environment
    println(os.Getenv("HOME"))
    
    // Test working directory
    wd, _ := os.Getwd()
    println(wd)
    
    return 0
}
