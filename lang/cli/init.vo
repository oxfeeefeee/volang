package main

import "os"

func cmdInit(args []string) int {
	if len(args) == 0 {
		println("usage: vo init <module-path>")
		println("  e.g. vo init github.com/user/myapp")
		return 1
	}

	modulePath := args[0]

	// Create vo.mod file
	content := "module " + modulePath + "\n\nvo 0.1\n"

	err := os.WriteFile("vo.mod", []byte(content), 0644)
	if err != nil {
		println("[VO:IO]", err.Error())
		return 1
	}

	println("Initialized module:", modulePath)
	return 0
}
