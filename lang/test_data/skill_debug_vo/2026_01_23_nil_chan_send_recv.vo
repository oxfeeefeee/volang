// Test: nil channel send/recv behavior
// In Go, send/recv on nil channel blocks forever
package main

import "fmt"

// Test: Send on nil channel in select (should not panic, just not match)
func testNilChanSendSelect() {
	var ch chan int
	
	sent := false
	select {
	case ch <- 1:
		sent = true
	default:
		// Should reach here since nil chan blocks
	}
	
	assert(!sent, "test: nil chan send in select")
	fmt.Println("Test: PASSED - nil chan send select")
}

// Test: Recv on nil channel in select (should not panic, just not match)
func testNilChanRecvSelect() {
	var ch chan int
	
	received := false
	select {
	case <-ch:
		received = true
	default:
		// Should reach here since nil chan blocks
	}
	
	assert(!received, "test: nil chan recv in select")
	fmt.Println("Test: PASSED - nil chan recv select")
}

func main() {
	testNilChanSendSelect()
	testNilChanRecvSelect()
	
	fmt.Println("nil_chan_send_recv: ALL PASSED")
}
