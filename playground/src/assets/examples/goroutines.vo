package main

// Concurrent computation with goroutines and channels

func main() {
    ch := make(chan int, 3)
    
    // Launch concurrent workers
    go square(ch, 3)
    go square(ch, 4)
    go square(ch, 5)
    
    // Collect results
    sum := 0
    for i := 0; i < 3; i++ {
        sum += <-ch
    }
    println("3² + 4² + 5² =", sum)  // 50
}

func square(ch chan int, n int) {
    ch <- n * n
}
