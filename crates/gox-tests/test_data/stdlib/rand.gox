package main

import "rand"

func main() {
    println("Starting rand tests...")
    
    // Seed for reproducibility
    rand.Seed(42)
    
    // Test Int - should return non-negative
    i := rand.Int()
    assert(i >= 0, "Int should return non-negative")
    
    // Test Intn - should be in range [0, n)
    n := rand.Intn(100)
    assert(n >= 0 && n < 100, "Intn(100) should be in [0, 100)")
    
    // Test Float64 - should be in [0, 1)
    f := rand.Float64()
    assert(f >= 0.0 && f < 1.0, "Float64 should be in [0, 1)")
    
    println("All rand tests passed!")
}

