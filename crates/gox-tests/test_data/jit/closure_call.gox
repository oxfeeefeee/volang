// +jit
// Closure indirect call test - returning closures
package main

func makeAdder(x int) func(int) int {
    return func(y int) int {
        return x + y
    }
}

func main() {
    add5 := makeAdder(5)
    result := add5(10)
    println(result)
    assert(result == 15, "add5(10) should be 15")
    
    add10 := makeAdder(10)
    result2 := add10(20)
    println(result2)
    assert(result2 == 30, "add10(20) should be 30")
}
