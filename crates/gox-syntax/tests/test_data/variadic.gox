// Variadic functions and spread test
package main;

// Variadic function: accepts zero or more int arguments
func sum(nums ...int) int {
    total := 0;
    for i := 0; i < len(nums); i += 1 {
        total += nums[i];
    }
    return total;
}

// Variadic with regular params before
func printf(format string, args ...int) {
    println(format);
}

// Using variadic functions
func testVariadic() {
    a := sum();           // zero args
    b := sum(1);          // one arg
    c := sum(1, 2, 3);    // multiple args
    println(a);
    println(b);
    println(c);
}

// Spread operator: expand slice as arguments
func testSpread() {
    nums := []int{1, 2, 3, 4, 5};
    result := sum(nums...);  // spread slice
    println(result);
}

// Function literals with variadic
func funcLitVariadic() {
    f := func(items ...string) {
        for i := 0; i < len(items); i += 1 {
            println(items[i]);
        }
    };
    f("a", "b", "c");
}

func main() {
    testVariadic();
    testSpread();
    funcLitVariadic();
}
